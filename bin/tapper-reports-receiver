#! /usr/bin/env perl

use strict;
use warnings;

use Tapper::Config;
use Tapper::Reports::Receiver;

my $port = Tapper::Config->subconfig->{report_port};
my $EUID = `id -u`; chomp $EUID;
my $EGID = `id -g`; chomp $EGID;
my $logconf = Tapper::Config->subconfig->{files}{log4perl_cfg};
Log::Log4perl->init($logconf);

Tapper::Reports::Receiver->run(
                                port         => $port,
                                log_level    => 2,
                                max_servers  => 100,
                                user         => $EUID,
                                group        => $EGID,
                               );
