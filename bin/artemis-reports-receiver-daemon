#! /usr/bin/env perl

use strict;
use warnings;

use Artemis::Reports::Receiver::Daemon;

$ENV{MX_DAEMON_STDOUT} ||= '/tmp/artemis_reports_receiver_daemon_devel_stdout.log';
$ENV{MX_DAEMON_STDERR} ||= '/tmp/artemis_reports_receiver_daemon_devel_stderr.log';

my $receiver = new Artemis::Reports::Receiver::Daemon
    (
     pidfile => '/tmp/artemis-reports-receiver-daemon.pid'
    );

$receiver->run;
